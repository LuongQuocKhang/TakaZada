@using TakaZada.Core.Models;
@{
    /**/

    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
    var vga = (VGA)ViewBag.Selectedvga;
}
@Scripts.Render("~/bundles/jquery")
<link href="~/Content/Style.css" rel="stylesheet" />

<h2>Add form</h2>
@{
    if (null != Session["submit_message"])
    {
        @Html.Raw("<h3 class='error-mesage' style='display: none;'>" + Session["submit_message"] + "</h3>");
        <script type="text/javascript">
            $(function () {
                $('.error-mesage').delay(500).fadeIn('normal', function () {
                    $(this).delay(2500).fadeOut();
                });
            });
        </script>
        Session["submit_message"] = null;
    }
}
<form method="post">
    <div class="form-group">
        <div class="col-md-6">
            <div class="form-group">
                <label>Upload Image</label>
                <div class="input-group">
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">
                            Browse… <input type="file" id="imgInp">
                        </span>
                    </span>
                    <input type="text" class="form-control" id="Image" name="Image" value="" readonly>
                </div>
                <input type="text" class="form-control" hidden name="src" id="src" value="" />
                <img id='img-upload' />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" id="Name" name="Name" />
    </div>
    <div class="form-group">
        <label>TradeMark</label>
        <input class="form-control" type="text" id="TradeMark" name="TradeMark" />
    </div>
    <div class="form-group">
        <label>Label</label>
        <input class="form-control" type="text" id="Label" name="Label" />
    </div>
    <div class="form-group">
        <label>ChipsetManufacturer</label>
        <input class="form-control" type="text" id="ChipsetManufacturer" name="ChipsetManufacturer" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input class="form-control" type="text" id="Model" name="Model" />
    </div>
    <div class="form-group">
        <label>VGA</label>
        <input class="form-control" type="text" id="VGA" name="VGA" />
    </div>
    <div class="form-group">
        <label>BoostClock</label>
        <input class="form-control" type="text" id="BoostClock" name="BoostClock" />
    </div>
    <div class="form-group">
        <label>VGAMemory</label>
        <input class="form-control" type="text" id="VGAMemory" name="VGAMemory" />
    </div>
    <div class="form-group">
        <label>RamType</label>
        <input class="form-control" type="text" id="RamType" name="RamType" />
    </div>
    <div class="form-group">
        <label>MaxResolution</label>
        <input class="form-control" type="text" id="MaxResolution" name="MaxResolution" />
    </div>
    <div class="form-group">
        <label>Directx</label>
        <input class="form-control" type="text" id="Directx" name="Directx" />
    </div>
    <div class="form-group">
        <label>Size</label>
        <input class="form-control" type="text" id="Size" name="Size" />
    </div>
    <div class="form-group">
        <label>WarrantyPeriod</label>
        <input class="form-control" type="number" id="WarrantyPeriod" name="WarrantyPeriod" />
    </div>

    <div class="form-group">
        <label>Price</label>
        <input class="form-control" type="text" id="Price" name="Price" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="8">
        </textarea>
    </div>
    <button class="btn btn-success" type="submit">Submit</button>
    <a class="btn btn-danger" href="@Url.Action("Index","RAM")">Cancel</a>
</form>

<script src="~/Scripts/UploadImage.js"></script>
