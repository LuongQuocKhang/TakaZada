@using TakaZada.Core.Models;
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
    var Case = (Case)ViewBag.SelectedCase;
}
@Scripts.Render("~/bundles/jquery")
<h2>Update form</h2>
<form method="post">
    @{
        if (null != Session["submit_message"])
        {
            @Html.Raw("<h3 class='error-mesage' style='display: none;'>" + Session["submit_message"] + "</h3>");
            <script type="text/javascript">
                $(function () {
                    $('.error-mesage').delay(500).fadeIn('normal', function () {
                        $(this).delay(2500).fadeOut();
                    });
                });
            </script>
            Session["submit_message"] = null;
        }
    }
    <div class="form-group">
        <input class="form-control" type="hidden" name="Id" value="@Case.Id" />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" id="Name" name="Name" value="@Case.Name" />
    </div>
    <div class="form-group">
        <label>WarrantyPeriod</label>
        <input class="form-control" type="number" id="WarrantyPeriod" name="WarrantyPeriod" value="@Case.WarrantyPeriod" />
    </div>
    <div class="form-group">
        <label>TradeMark</label>
        <input class="form-control" type="text" id="TradeMark" name="TradeMark" value="@Case.TradeMark" />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input class="form-control" type="text" id="Model" name="Model" value="@Case.Model" />
    </div>
    <div class="form-group">
        <label>Color</label>
        <input class="form-control" type="text" id="Color" name="Color" value="@Case.Color" />
    </div>
    <div class="form-group">
        <label>Size</label>
        <input class="form-control" type="text" id="Size" name="Size" value="@Case.Size" />
    </div>
    <div class="form-group">
        <label>MainSupport</label>
        <input class="form-control" type="text" id="MainSupport" name="MainSupport" value="@Case.MainSupport" />
    </div>
    <div class="form-group">
        <label>USB</label>
        <input class="form-control" type="text" id="USB" name="USB" value="@Case.USB" />
    </div>
    <div class="form-group">
        <label>DriverBays</label>
        <input class="form-control" type="text" id="DriverBays" name="DriverBays" value="@Case.DriverBays" />
    </div>
    <div class="form-group">
        <label>Slots</label>
        <input class="form-control" type="text" id="Slots" name="Slots" value="@Case.Slots" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" type="text" id="Price" name="Price" value="@Case.Price" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="8">
          @Case.Description
        </textarea>
    </div>
    <button class="btn btn-success" type="submit">Submit</button>
    <a class="btn btn-danger" href="@Url.Action("Index","Case")">Cancel</a>
</form>

